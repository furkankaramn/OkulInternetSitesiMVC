@model OkulİnternetSitesi.Models.OgrenciDersleri

@{
    ViewBag.Title = "Edit";
}

<h2>Düzenle</h2>

@using (Html.BeginForm("Edit", "OgrenciDersleris", new { ogrenciId = Model.OgrenciId, dersId = Model.DersId }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>OgrenciDersleri</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.OgrenciId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.OgrenciId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DersId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("DersId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DersId, "", new { @class = "text-danger" })
            </div>
        </div>
    
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-default" />
            </div>
        </div>
    </div>
}
