@model OkulİnternetSitesi.Models.DersProgramıExcel

@{
    ViewBag.Title = "Detaylar";
}

<style>
    .details-container {
        max-width: 600px;
        margin: 0 auto;
    }

    .dl-horizontal {
        margin-top: 20px;
    }

        .dl-horizontal dt, .dl-horizontal dd {
            display: inline-block;
            margin-right: 10px;
            font-weight: bold;
        }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn {
        padding: 8px 15px;
        border-radius: 5px;
        text-decoration: none;
        color: #fff;
        transition: background-color 0.2s ease-in-out;
    }

    .btn-default {
        background-color: #f2f2f2;
        color: #000;
    }

        .btn-default:hover {
            background-color: #e6e6e6;
        }
</style>

<h2>Detaylar</h2>

<div class="details-container">
    <h4>Ders Programı</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.SınıfAdı)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SınıfAdı)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DersProgramı)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DersProgramı)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Düzenle", "Edit", new { id = Model.ID }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("Listeye Dön", "Index", new { @class = "btn btn-default" })
</p>
