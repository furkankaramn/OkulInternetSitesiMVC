@model IEnumerable<OkulİnternetSitesi.Models.DersProgramıExcel>

@{
    ViewBag.Title = "Ders Programı";
}

<style>
    body {
        background-color: #f8fdcf;
        padding: 20px;
        text-align: center;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
    }

    th, td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    .btn-group {
        margin: 5px;
    }

    .btn {
        padding: 6px 12px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        border-radius: 3px;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
    }

    .btn-info {
        background-color: #17a2b8;
        color: #fff;
    }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
    }

    .btn-success {
        background-color: #28a745;
        color: #fff;
    }

    .btn-group .btn:not(:last-child) {
        margin-right: 5px;
    }
</style>

<h2>Ders Programı</h2>

<table class="table">
    <tr>
        <th>
            <center>Sınıf Adı</center>
        </th>
        <th>
            <center>Ders Programı</center>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <center>@item.SınıfAdı</center>
            </td>
            <td>
                <center>@Path.GetFileName(item.DersProgramı)</center>
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.ID }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Detay", "Details", new { id = item.ID }, new { @class = "btn btn-info" })
                @Html.ActionLink("Sil", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
            </td>
            <td class="btn-group">
                <center>@Html.ActionLink("İndir", "Download", new { id = item.ID }, new { @class = "btn btn-success" })</center>
            </td>
        </tr>
    }
</table>
