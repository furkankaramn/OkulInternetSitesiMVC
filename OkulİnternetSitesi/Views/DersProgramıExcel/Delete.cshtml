@model OkulİnternetSitesi.Models.DersProgramıExcel

@{
    ViewBag.Title = "Sil";
}

<style>
    .delete-container {
        max-width: 600px;
        margin: 0 auto;
    }

    .dl-horizontal {
        margin-top: 20px;
    }

        .dl-horizontal dt, .dl-horizontal dd {
            display: inline-block;
            margin-right: 10px;
            font-weight: bold;
        }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
    }

        .btn-danger:hover {
            background-color: #b9001a;
        }

    .btn {
        padding: 8px 15px;
        border-radius: 5px;
        text-decoration: none;
        color: #fff;
        transition: background-color 0.2s ease-in-out;
    }

    .btn-default {
        background-color: #f2f2f2;
        color: #000;
    }

        .btn-default:hover {
            background-color: #e6e6e6;
        }
</style>

<h2>Sil</h2>

<h3>Bunu silmek istediğinizden emin misiniz</h3>
<div class="delete-container">
    <h4>Ders Programı</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.SınıfAdı)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SınıfAdı)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DersProgramı)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DersProgramı)
        </dd>
    </dl>

    @using (Html.BeginForm("Delete", "DersProgramıExcel", new { id = Model.ID }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-danger" /> |
            @Html.ActionLink("Listeye Dön", "Index", new { @class = "btn btn-default" })
        </div>
    }
</div>
