@model IEnumerable<OkulİnternetSitesi.Models.Ogrenci>

@{
    ViewBag.Title = "Index";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8fdcf;
        padding: 20px;
    }

    h2 {
        color: #007bff;
        margin-bottom: 20px;
    }

    p {
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    .btn-group {
        margin: 5px;
    }

    .btn {
        padding: 6px 12px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        border-radius: 3px;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
    }

    .btn-info {
        background-color: #17a2b8;
        color: #fff;
    }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
    }

    .btn-success {
        background-color: #28a745;
        color: #fff;
    }

    .btn-group .btn:not(:last-child) {
        margin-right: 5px;
    }
    .sign_btn {
        text-align: center;
        padding: 10px;
    }

        .sign_btn a {
            display: inline-block;
            background-color: #28a745;
            color: #fff;
            padding: 6px 12px;
            text-decoration: none;
            border-radius: 3px;
            transition: background-color 0.3s ease;
        }

            .sign_btn a:hover {
                background-color: #218838;
            }
</style>

<h2>Ogrenci Listesi</h2>

<p>
    @Html.ActionLink("Ekle", "Create")
</p>

<table class="table">
    <tr>
        <th>
            Ogrenci Adı Soyadı
        </th>
        <th>
            TC
        </th>
        <th>
            Ogrenci Dogum Yeri
        </th>
        <th>
            Ogrenci Dogum Tarihi
        </th>
        <th>
            Resim
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OgrenciAdıSoyadı)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OgrenciDogumYeri)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OgrenciDogumTarihi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resim)
            </td>
            <td class="btn-group">
                @Html.ActionLink("Detaylar", "Details", new { id = item.OgrenciId }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Düzenle", "Edit", new { id = item.OgrenciId }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.OgrenciId }, new { @class = "btn btn-danger" })
            </td>
            <td class="sign_btn">
                <center><a href="@Url.Action("Ogrenci_Bilgisi", "Temel", new { ogrenciId = item.OgrenciId })">Öğrenci Bilgisi</a></center>
            </td>
        </tr>
    }
</table>
