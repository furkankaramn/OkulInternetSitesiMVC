@model IEnumerable<OkulİnternetSitesi.Models.Ogrenci>

<style>
    body {
        background-color: #f8fdcf;
        padding: 20px;
        text-align: center;
    }

    .table {
        width: 100%;
        margin-top: 1%;
        border-collapse: collapse;
    }

    th, td {
        border: 1px solid black;
        padding: 8px;
    }

    th {
        background-color: #f2f2f2;
    }
</style>

<center>
    <h2 style="color: blue;">Öğrenci Listesi</h2>
</center>

<center>
    <table class="table">
        <thead>
            <tr>
                <th style="width: 10%;">Resim</th>
                <th>Öğrenci Adı Soyadı</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/Uploads/@item.Resim" style="width: 100%;" />
                    </td>
                    <td>
                        <center><h1>@Html.DisplayFor(model => item.OgrenciAdıSoyadı)</h1></center>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</center>
