@model IEnumerable<OkulİnternetSitesi.Models.Ders>

@{
    ViewBag.Title = "Index";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8fdcf;
        padding: 20px;
    }

    h2 {
        color: #007bff;
        margin-bottom: 20px;
    }

    p {
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    .btn-group {
        margin: 5px;
    }

    .btn {
        padding: 6px 12px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        border-radius: 3px;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
    }

    .btn-info {
        background-color: #17a2b8;
        color: #fff;
    }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
    }

    .btn-success {
        background-color: #28a745;
        color: #fff;
    }

    .btn-group .btn:not(:last-child) {
        margin-right: 5px;
    }
</style>



<p>
    @Html.ActionLink("Ekle", "Create")
</p>

<table class="table">
    <tr>
        <th>
            Ders Adı
        </th>
        <th>
            Ücret
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DersAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td class="btn-group">
                @Html.ActionLink("Düzenle", "Edit", new { id = item.DersId }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Detaylar", "Details", new { id = item.DersId }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.DersId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>
